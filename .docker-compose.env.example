# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=especialistas
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Application Configuration
PORT=3000
NODE_ENV=production

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# Email Provider Configuration
# ============================================
# EMAIL_PROVIDER: 'smtp' | 'mailgun' (default: smtp)
#
# For LOCAL DEVELOPMENT with Mailpit (recommended):
#   - EMAIL_PROVIDER=smtp
#   - NOTIFICATIONS_SMTP_HOST=mailpit
#   - NOTIFICATIONS_SMTP_PORT=1025
#   - NOTIFICATIONS_SMTP_USER= (leave empty)
#   - NOTIFICATIONS_SMTP_PASS= (leave empty)
#   - NOTIFICATIONS_SMTP_FROM=noreply@specialist.local
#   - View emails at: http://localhost:8025
#
# For Gmail SMTP:
#   - EMAIL_PROVIDER=smtp
#   - NOTIFICATIONS_SMTP_HOST=smtp.gmail.com
#   - NOTIFICATIONS_SMTP_PORT=587
#   - NOTIFICATIONS_SMTP_USER=<your_gmail_address>
#   - NOTIFICATIONS_SMTP_PASS=<gmail_app_password>
#   - NOTIFICATIONS_SMTP_FROM="Especialistas <your_gmail_address>"
#
# For Mailgun API:
#   - EMAIL_PROVIDER=mailgun
#   - MAILGUN_API_KEY=<your_mailgun_api_key>
#   - MAILGUN_DOMAIN=<your_mailgun_domain>
#   - MAILGUN_FROM="Especialistas <noreply@yourdomain.com>"
#   - MAILGUN_REGION=us (or 'eu' for EU endpoint)

EMAIL_PROVIDER=smtp
NOTIFICATIONS_SMTP_HOST=
NOTIFICATIONS_SMTP_PORT=
NOTIFICATIONS_SMTP_USER=
NOTIFICATIONS_SMTP_PASS=
NOTIFICATIONS_SMTP_FROM=

# Mailgun API (only needed if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM=
MAILGUN_REGION=us

# Notifications dispatch
# Enables background processing of pending deliveries (email/whatsapp).
# If disabled, deliveries remain as PENDING in DB.
NOTIFICATIONS_DISPATCH_ENABLED=false
NOTIFICATIONS_DISPATCH_BATCH_SIZE=25
NOTIFICATIONS_DISPATCH_MAX_ATTEMPTS=5
NOTIFICATIONS_DISPATCH_RETRY_BASE_SECONDS=60
NOTIFICATIONS_DISPATCH_RETRY_MAX_SECONDS=3600

# Notifications retention
# Delete notifications older than N days (default: 90)
NOTIFICATIONS_RETENTION_DAYS=90

