{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": false,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "watchAssets": false
  },
  "watchOptions": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/prisma/**",
      "**/*.log",
      "**/.env",
      "**/.env.*"
    ],
    "usePolling": true,
    "interval": 1000,
    "binaryInterval": 3000
  }
}

